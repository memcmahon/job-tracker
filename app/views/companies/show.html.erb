<section>
  <h2>All Jobs for <%= @company.name %></h2>

  <section class ="grid">
    <% @jobs.each do |job| %>
      <div>
        <%= link_to job.title, job_path(job) %> at <%= job.company.name %></ul>
      </div>
    <% end %>
  </section>

  <section>
    <div>

      Company Contacts:

      <% @contacts.each do |contact| %>
        <%= contact.full_name %>, <%= contact.position %><br>
        <%= contact.email %>
      <% end %>
    </div>

    <div>
      New Contact:

      <%= form_for [@company, @contact] do |f| %>
        <%= f.label :full_name %>
        <%= f.text_field :full_name %>

        <%= f.label :position %>
        <%= f.text_field :position %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.submit %>
      <% end %>
    </div>
  </section>
</section>
